{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#E36464",
          "properties": {
            "user_info_separator": "",
            "display_host": false,
            "prefix": "@",
            "postfix": ""
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#56B6C2",
          "properties": {
            "style": "full",
            "postfix": ""
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#8eda7c",
          "properties": {
            "branch_icon": "",
            "display_status": true,
            "prefix": " <#DDB15F>git(</>",
            "postfix": "<#DDB15F>)</>"
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#DCB977",
          "properties": {
            "prefix": "\uF119",
            "display_exit_code": false,
            "postfix": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ffffff",
          "properties": {
            "text": "\u276F",
            "postfix": "",
            "prefix": " "
          }
        }
      ]
    }
  ],
  "final_space": true
}
